<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CounterApp2.MainPage"
             Title="Licznik">
    <StackLayout Padding="20">
        <Label Text="Licznik" FontSize="32" HorizontalOptions="Center" />
        <ListView x:Name="CounterListView" ItemTapped="OnCounterTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Value}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Dodaj licznik" Clicked="OnAddCounterClicked" />
    </StackLayout>
</ContentPage>